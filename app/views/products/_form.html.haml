= simple_nested_form_for(@product) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, label: "Product name"
    %h4 Materials
    = f.simple_fields_for :materials do |m| 
      = m.input :id, collection: Material.all, label_method: :name, value_method: :id, label: "Material:"
      = m.link_to_remove "Remove this material"
      %br
      %br
    = f.link_to_add "Add a material", :materials 

  %br
  .form-actions
    = f.button :submit
